<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/TextDataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/test_data_title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginBottom="16sp"
        android:layout_marginTop="16sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/PatIdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Patient Id"
                android:textColor="#03A9F4"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/PatAgeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Patient Age"
                android:textColor="#03A9F4"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/TextGenderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Select Gender"
                android:textColor="#03A9F4"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="10sp">

            <EditText
                android:id="@+id/EditPatientId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Patient Id"
                android:inputType="number"
                android:textColor="#000000"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"/>


            <EditText
                android:id="@+id/EditPatientAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Patient Age"
                android:inputType="number"
                android:textColor="#000000"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"/>


            <Spinner
                android:id="@+id/SpinnerGenderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/genderlist"
                android:prompt="@string/spinner_prompt"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </TableRow>

    </TableLayout>

